root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[{package.json,bower.json}]
indent_style = space
indent_size = 2

[**.{yml,yaml}]
indent_style = space
indent_size = 2
